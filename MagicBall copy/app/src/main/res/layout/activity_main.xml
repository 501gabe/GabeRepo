<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gabe.android.aca.magicball.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ASK YOUR QUESTIONS TO THE MAGIC 8 BAll"
        android:id="@+id/textView"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Push for Answers"
        android:id="@+id/Ballbutton"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/ResultText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Ballbutton"
        android:layout_above="@+id/Dicebutton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll the dice"
        android:id="@+id/Dicebutton"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/Ballbutton"
        android:layout_alignStart="@+id/Ballbutton"
        android:layout_marginBottom="163dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/DiceResults"
        android:layout_alignTop="@+id/Dicebutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/ResultText"
        android:layout_alignEnd="@+id/ResultText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shake em up, shake em up, shake em up, shake em"
        android:id="@+id/textView2"
        android:layout_alignRight="@+id/Dicebutton"
        android:layout_alignEnd="@+id/Dicebutton"
        android:layout_alignBottom="@+id/ResultText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
